<div>
    {{#with main}}
        <main>
            <section>
                {{> title data='My education' big=true}}
                <ul>
                    {{#each educations}}
                        <li>
                            {{name}}
                            {{#unless isEnd includeZero=faste}} (ще в процесі) {{/unless}}
                        </li>
                    {{/each}}
                </ul>
                {{> title data='My certificates' big=true}}
                <ul>
                    {{#each certificates}}
                        <li>
                            {{name}}
                            {{#if id}} ({{id}}) {{/if}}
                        </li>
                    {{/each}}
                </ul>
            </section>
        </main>
    {{/with}}
</div>